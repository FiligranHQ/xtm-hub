{
  "name": "portal-api",
  "version": "1.0.0",
  "description": "Portal API",
  "main": "src/index.js",
  "repository": "https://github.com/FiligranHQ/cloud-portal",
  "author": "Filigran",
  "license": "Filigran",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts",
    "copy": "copyfiles ./src/**/*.graphql dist/ && copyfiles ./src/migrations/*.js dist/",
    "build": "tsc && yarn copy",
    "check-ts": "tsc --noEmit",
    "generate:ts": "graphql-codegen-esm --config codegen.yml",
    "start": "yarn build && node ./dist/src/index.js",
    "knex:run": "NODE_OPTIONS='--loader ts-node/esm' yarn run knex --knexfile knexfile.ts",
    "migrate:make": "yarn knex:run migrate:make",
    "migrate:latest": "yarn knex:run migrate:latest",
    "seed:make": "yarn knex:run seed:make"
  },
  "dependencies": {
    "@apollo/server": "4.10.0",
    "@graphql-tools/load-files": "7.0.0",
    "@graphql-tools/merge": "9.0.1",
    "@graphql-tools/schema": "10.0.2",
    "body-parser": "1.20.2",
    "config": "3.3.10",
    "cookie-parser": "1.4.6",
    "copyfiles": "2.4.1",
    "cors": "2.8.5",
    "express": "4.18.2",
    "express-session": "1.17.3",
    "glob": "10.3.10",
    "graphql": "16.8.1",
    "graphql-relay": "0.10.0",
    "graphql-sse": "2.5.2",
    "graphql-subscriptions": "2.0.0",
    "knex": "3.1.0",
    "pg": "8.11.3",
    "uuid": "9.0.1",
    "ws": "8.16.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@swc/core": "1.3.105",
    "@types/config": "3.3.3",
    "@types/cookie-parser": "1.4.6",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/express-session": "1.17.10",
    "@types/node": "20.11.5",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "eslint": "8.56.0",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "packageManager": "yarn@3.6.3"
}
