{
  "name": "portal-api",
  "version": "1.0.0",
  "description": "Portal API",
  "main": "src/index.js",
  "repository": "https://github.com/FiligranHQ/cloud-portal",
  "author": "Filigran",
  "license": "Filigran",
  "type": "module",
  "private": true,
  "scripts": {
    "copy": "copyfiles ./src/**/*.graphql dist/ && copyfiles ./src/migrations/*.js dist/",
    "check-ts": "tsc --noEmit",
    "generate:ts": "graphql-codegen-esm --config codegen.yml",
    "knex:run": "NODE_OPTIONS='--loader ts-node/esm' yarn run knex --knexfile knexfile.ts",
    "migrate:make": "yarn knex:run migrate:make",
    "migrate:latest": "yarn knex:run migrate:latest",
    "migrate:down": "yarn knex:run migrate:down",
    "seed:make": "yarn knex:run seed:make",
    "generate-pg-to-ts": "npx kanel",
    "build": "yarn copy && node builder/prod/prod.js",
    "start": "node dist/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch dist/index.js",
    "dev:esbuild": "yarn copy && node builder/dev/dev.js",
    "start-dev": "concurrently \"yarn dev:tsc\" \"yarn dev:esbuild\" \"yarn dev:node\"",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:w": "vitest",
    "prepare": "cd .. && husky ./.husky"
  },
  "dependencies": {
    "@apollo/server": "4.10.4",
    "@graphql-tools/load-files": "7.0.0",
    "@graphql-tools/merge": "9.0.4",
    "@graphql-tools/schema": "10.0.4",
    "apollo-errors": "1.9.0",
    "body-parser": "1.20.2",
    "config": "3.3.11",
    "copyfiles": "2.4.1",
    "cors": "2.8.5",
    "express": "4.19.2",
    "express-session": "1.18.0",
    "glob": "10.3.12",
    "graphql": "16.8.1",
    "graphql-relay": "0.10.1",
    "graphql-sse": "2.5.3",
    "graphql-subscriptions": "2.0.0",
    "jwt-decode": "4.0.0",
    "knex": "3.1.0",
    "openid-client": "5.6.5",
    "passport": "0.7.0",
    "pg": "8.11.5",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "4.0.7",
    "@graphql-codegen/typescript-resolvers": "4.0.6",
    "@types/config": "3.3.4",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/express-session": "1.18.0",
    "@types/node": "20.12.9",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "concurrently": "8.2.2",
    "esbuild": "0.20.2",
    "eslint": "9.x",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "kanel": "3.8.8",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.0",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "typescript-eslint": "^7.12.0",
    "vitest": "^1.6.0"
  },
  "packageManager": "yarn@3.6.3",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json}": [
      "yarn format",
      "yarn lint:fix"
    ]
  }
}
