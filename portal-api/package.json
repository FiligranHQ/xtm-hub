{
  "name": "portal-api",
  "version": "1.0.0",
  "description": "Portal API",
  "main": "src/index.js",
  "repository": "https://github.com/FiligranHQ/cloud-portal",
  "author": "Filigran",
  "license": "Filigran",
  "type": "module",
  "private": true,
  "scripts": {
    "copy": "copyfiles ./src/**/*.graphql dist/ && copyfiles ./src/migrations/*.js dist/",
    "check-ts": "tsc --noEmit",
    "generate:ts": "graphql-codegen --config codegen.yml",
    "knex:run": "knex --knexfile knexfile.ts",
    "migrate:make": "yarn knex:run migrate:make",
    "migrate:latest": "yarn knex:run migrate:latest",
    "migrate:down": "yarn knex:run migrate:down",
    "seed:make": "yarn knex:run seed:make",
    "generate-pg-to-ts": "npx kanel",
    "build": "yarn copy && node builder/prod/prod.js",
    "start": "node dist/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch dist/index.js",
    "dev:esbuild": "yarn copy && node builder/dev/dev.js",
    "start-dev": "concurrently \"yarn dev:tsc\" \"yarn dev:esbuild\" \"yarn dev:node\"",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "test": "VITEST_MODE=true && vitest run",
    "test:ci": "yarn test && yarn lint",
    "prepare": "cd .. && husky ./.husky",
    "seed:make:test": "VITEST_MODE=true && yarn knex:run seed:make",
    "start-dev-test": "VITEST_MODE=true && START_DEV_SERVER=true && yarn start-dev",
    "test:w": "VITEST_MODE=true && vitest",
    "init-db-test": "VITEST_MODE=true tsx tests/script/create-database.ts",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@apollo/server": "4.11.3",
    "@aws-sdk/client-s3": "3.726.1",
    "@aws-sdk/lib-storage": "3.726.1",
    "@graphql-codegen/plugin-helpers": "5.1.0",
    "@graphql-tools/load-files": "7.0.0",
    "@graphql-tools/merge": "9.0.17",
    "@graphql-tools/schema": "10.0.16",
    "apollo-errors": "1.9.0",
    "body-parser": "1.20.3",
    "config": "3.3.12",
    "copyfiles": "2.4.1",
    "cors": "2.8.5",
    "express": "4.21.2",
    "express-prom-bundle": "8.0.0",
    "express-session": "1.18.1",
    "glob": "11.0.1",
    "graphql": "16.10.0",
    "graphql-relay": "0.10.2",
    "graphql-sse": "2.5.4",
    "graphql-subscriptions": "3.0.0",
    "graphql-upload": "17.0.0",
    "jwt-decode": "4.0.0",
    "knex": "3.1.0",
    "nodemailer": "6.9.16",
    "openid-client": "6.1.7",
    "passport": "0.7.0",
    "pg": "8.13.1",
    "prom-client": "15.1.3",
    "uuid": "11.0.5",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "9.18.0",
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/typescript": "4.1.2",
    "@graphql-codegen/typescript-resolvers": "4.4.1",
    "@types/config": "3.3.5",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/express-session": "1.18.1",
    "@types/graphql-upload": "17.0.0",
    "@types/node": "22.10.6",
    "@types/nodemailer": "6.4.17",
    "@types/passport": "1.0.17",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.20.0",
    "@typescript-eslint/parser": "8.20.0",
    "chokidar": "4.0.3",
    "concurrently": "9.1.2",
    "esbuild": "0.24.2",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "kanel": "3.11.0",
    "lint-staged": "15.3.0",
    "prettier": "3.4.2",
    "prettier-plugin-organize-imports": "4.1.0",
    "supertest": "7.0.0",
    "tsx": "4.19.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.20.0",
    "vitest": "2.1.8"
  },
  "packageManager": "yarn@3.6.3",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json}": [
      "yarn format",
      "yarn lint:fix"
    ]
  }
}
