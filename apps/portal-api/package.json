{
  "name": "portal-api",
  "version": "1.4.8",
  "description": "Portal API",
  "main": "src/index.js",
  "repository": "https://github.com/FiligranHQ/cloud-portal",
  "author": "Filigran",
  "license": "Filigran",
  "type": "module",
  "private": true,
  "scripts": {
    "copy": "copyfiles ./src/**/*.graphql dist/ && copyfiles ./src/migrations/*.js dist/",
    "check-ts": "tsc --noEmit",
    "generate:ts": "graphql-codegen-esm --config codegen.yml",
    "knex:run": "NODE_OPTIONS='--import tsx' knex --knexfile knexfile.ts",
    "migrate:make": "yarn knex:run migrate:make",
    "migrate:latest": "yarn knex:run migrate:latest",
    "migrate:up": "yarn knex:run migrate:up",
    "migrate:down": "yarn knex:run migrate:down",
    "seed:make": "yarn knex:run seed:make",
    "generate-pg-to-ts": "NODE_OPTIONS='--import tsx' kanel",
    "build": "yarn copy && node builder/prod/prod.js",
    "start": "LOCAL_DEV=true node dist/index.js",
    "start-tsx": "LOCAL_DEV=true tsx --watch src/index.ts --clear-screen=false",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch dist/index.js",
    "start-dev": "concurrently \"yarn dev:tsc\" \"yarn start-tsx\" \"yarn watch:graphql\"",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint-staged": "lint-staged",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "test": "VITEST_MODE=true && vitest run",
    "test:ci": "yarn test && yarn lint",
    "prepare": "cd .. && husky ./.husky",
    "seed:make:test": "VITEST_MODE=true && yarn knex:run seed:make",
    "start-dev-test": "VITEST_MODE=true && START_DEV_SERVER=true && yarn start-dev",
    "start-dev-e2e-test": "yarn clean-db-test && VITEST_MODE=true && START_DEV_SERVER=true && DATA_SEEDING=true && yarn start-dev",
    "test:w": "VITEST_MODE=true && vitest",
    "init-db-test": "VITEST_MODE=true tsx tests/script/create-database.ts",
    "clean-db-test": "VITEST_MODE=true tsx tests/script/clean-database.ts",
    "watch:graphql": "node builder/dev/watch-graphql.js"
  },
  "dependencies": {
    "@apollo/server": "4.11.0",
    "@aws-sdk/client-s3": "3.670.0",
    "@aws-sdk/lib-storage": "3.670.0",
    "@dmitryrechkin/json-schema-to-zod": "1.0.1",
    "@graphql-codegen/plugin-helpers": "5.1.0",
    "@graphql-tools/load-files": "7.0.0",
    "@graphql-tools/merge": "9.0.7",
    "@graphql-tools/schema": "10.0.6",
    "apollo-errors": "1.9.0",
    "auth0": "4.22.0",
    "body-parser": "1.20.3",
    "config": "3.3.12",
    "copyfiles": "2.4.1",
    "cors": "2.8.5",
    "express": "4.21.0",
    "express-prom-bundle": "8.0.0",
    "express-session": "1.18.0",
    "glob": "11.0.0",
    "graphql": "16.9.0",
    "graphql-relay": "0.10.2",
    "graphql-sse": "2.5.3",
    "graphql-subscriptions": "2.0.0",
    "graphql-upload": "16.0.2",
    "jwt-decode": "4.0.0",
    "knex": "3.1.0",
    "nodemailer": "6.9.15",
    "openid-client": "5.7.0",
    "passport": "0.7.0",
    "pg": "8.13.0",
    "prom-client": "15.1.3",
    "uuid": "10.0.0",
    "winston": "3.17.0",
    "zod": "3.25.75"
  },
  "devDependencies": {
    "@eslint/js": "9.30.1",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "4.0.9",
    "@graphql-codegen/typescript-resolvers": "4.2.1",
    "@types/config": "3.3.5",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/express-serve-static-core": "5.0.6",
    "@types/express-session": "1.18.0",
    "@types/graphql-upload": "16.0.7",
    "@types/node": "22.16.0",
    "@types/nodemailer": "6.4.16",
    "@types/passport": "1.0.17",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "@typescript-eslint/parser": "8.37.0",
    "chokidar": "3.6.0",
    "concurrently": "9.2.0",
    "esbuild": "0.25.5",
    "eslint": "9.x",
    "eslint-config-prettier": "10.1.5",
    "globals": "15.15.0",
    "husky": "9.1.6",
    "kanel": "3.14.1",
    "lint-staged": "15.5.2",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.1.0",
    "tsx": "4.19.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.37.0",
    "vitest": "2.1.1"
  },
  "packageManager": "yarn@3.8.7",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json}": [
      "yarn format",
      "yarn lint:fix"
    ]
  },
  "resolutions": {
    "@types/express-serve-static-core": "5.0.6"
  }
}
