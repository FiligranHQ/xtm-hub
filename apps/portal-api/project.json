{
  "name": "portal-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/portal-api",
  "projectType": "application",
  "types": ["yarn"],
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "portal-api/dist",
        "cwd": "apps/portal-api",
        "command": "concurrently \"yarn dev:tsc\" \"yarn start-tsx\" \"yarn watch:graphql\""
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "portal-api/dist",
        "cwd": "apps/portal-api",
        "command": "yarn copy && node builder/prod/prod.js"
      }
    },
    "generate-ts": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "apps/portal-api/dist",
        "cwd": "apps/portal-api",
        "command": "graphql-codegen-esm --config codegen.yml"
      }
    }
  },
  "tags": []
}
