{
  "name": "portal-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"relay-compiler\" \"next dev -p 3001\"",
    "build": "relay-compiler && next build",
    "check-ts": "tsc --noEmit",
    "check-ts-test": "tsc --project tsconfig.test.json",
    "start": "next start -p 3001",
    "lint": "next lint",
    "relay": "relay-compiler",
    "format": "prettier . --write",
    "test": "vitest run",
    "test:w": "vitest",
    "test:ci": "yarn test && yarn lint",
    "prepare": "cd .. && husky ./.husky",
    "auto-translation": "i18n-auto-translation -a deepl-free -p ./messages/en.json -t fr -k $SUBSCRIPTION_KEY"
  },
  "dependencies": {
    "@hookform/resolvers": "3.9.0",
    "@svgr/webpack": "8.1.0",
    "autoprefixer": "10.4.20",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.1",
    "extract-files": "13.0.0",
    "filigran-icon": "0.9.0",
    "filigran-ui": "0.24.4",
    "graphql": "16.9.0",
    "graphql-sse": "2.5.3",
    "next": "14.2.15",
    "next-intl": "3.21.1",
    "next-themes": "0.3.0",
    "postcss": "8.4.47",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.52.0",
    "react-relay": "18.1.0",
    "tailwind-merge": "2.5.3",
    "tailwindcss": "3.4.13",
    "tailwindcss-animate": "1.0.7",
    "usehooks-ts": "3.1.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "1.48.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.0.1",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.5.2",
    "@types/config": "3.3.5",
    "@types/node": "22.7.5",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "@types/react-relay": "16.0.6",
    "@types/relay-test-utils": "17.0.0",
    "@vitejs/plugin-react": "4.3.2",
    "babel-plugin-relay": "18.1.0",
    "concurrently": "9.0.1",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.15",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.1.6",
    "i18n-auto-translation": "1.8.2",
    "jsdom": "25.0.1",
    "lint-staged": "15.2.10",
    "monocart-reporter": "2.9.6",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-tailwindcss": "0.6.8",
    "relay-compiler": "18.1.0",
    "relay-test-utils": "18.1.0",
    "typescript": "5.6.3",
    "vite-plugin-relay": "2.1.0",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "2.1.2"
  },
  "packageManager": "yarn@3.6.3",
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "bracketSameLine": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "singleAttributePerLine": true,
    "plugins": [
      "prettier-plugin-tailwindcss",
      "prettier-plugin-organize-imports"
    ]
  }
}
